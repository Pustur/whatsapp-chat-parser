{
  "name": "whatsapp-chat-parser",
  "version": "2.0.1",
  "description": "A package to parse WhatsApp chats",
  "main": "dist/whatsapp-chat-parser.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist/ && rollup -c",
    "pretest": "npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "pretty-quick",
    "format:staged": "pretty-quick --staged",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "keywords": [
    "whatsapp",
    "chat",
    "discussion",
    "conversation",
    "log",
    "parser"
  ],
  "homepage": "https://github.com/Pustur/whatsapp-chat-parser",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pustur/whatsapp-chat-parser"
  },
  "bugs": {
    "url": "https://github.com/Pustur/whatsapp-chat-parser/issues"
  },
  "author": {
    "name": "Loris Bettazza",
    "email": "loris.bettazza@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "prettier": "1.18.1",
    "pretty-quick": "1.11.0",
    "rollup": "1.12.5",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "10.0.0",
    "rollup-plugin-uglify": "6.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:staged && npm run lint && npm t"
    }
  }
}
